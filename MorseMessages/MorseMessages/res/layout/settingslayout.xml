      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/black" >

     <TextView
         android:id="@+id/dot"
         android:layout_width="wrap_content"
         android:layout_height="32dp"
         android:layout_weight="3.47"
         android:background="@android:color/black"
         android:gravity="center"
         android:text="Dot and Dash"
         android:textColor="#ffff00" />

     <SeekBar
         android:id="@+id/dotseekBar"
         android:layout_width="192dp"
         android:layout_height="wrap_content"
         android:alpha="0.4"
         android:background="@android:color/black"
         android:scrollX="5px" 
         
         />
     
     <TextView
         android:id="@+id/dotvalue"
         android:layout_width="wrap_content"
         android:layout_height="31dp"
         android:gravity="center"
         android:layout_weight="1.98"
         android:background="@android:color/black"
         android:text="10ms"
         
         android:textColor="#ffff00" />

      </LinearLayout>
            <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:background="@android:color/black"
          >

     <TextView
         android:id="@+id/gapValue"
         android:layout_width="wrap_content"
         android:layout_height="32dp"
         android:layout_weight="2.95"
         android:background="@android:color/black"
         android:gravity="center"
         android:text="sleep time "
         android:textColor="#ffff00" />


     <SeekBar
         android:id="@+id/dashseekBar"
         android:layout_width="192dp"
         android:layout_height="wrap_content"
         android:alpha="0.4"
         android:background="@android:color/black"
         android:max="9"
         android:scrollX="5px" />
     
     <TextView
         android:id="@+id/dashvalue"
         android:layout_width="wrap_content"
         android:layout_height="31dp"
         android:gravity="center"
         android:layout_weight="1.98"
         android:background="@android:color/black"
         android:text="10ms"
         android:textColor="#ffff00" />

      </LinearLayout>

